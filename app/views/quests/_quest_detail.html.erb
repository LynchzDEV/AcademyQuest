<div id="<%= dom_id quest %>" class="bg-white dark:bg-gray-900 rounded-xl shadow-sm px-5 py-4 mb-6 transition-all hover:shadow-md max-w-3xl mx-auto w-full">
  <div class="flex flex-col sm:flex-row sm:items-center justify-between pb-3 mb-3 border-b border-gray-100 dark:border-gray-800">
    <h2 class="text-lg sm:text-xl font-medium text-gray-900 dark:text-white <%= 'line-through text-gray-400 dark:text-gray-500' if quest.status? %>">
      <%= quest.name %>
    </h2>
    <div class="mt-2 sm:mt-0">
      <%= status_badge(quest) %>
    </div>
  </div>

  <div class="text-sm text-gray-500 dark:text-gray-400 space-y-2">
    <% if quest.description.present? %>
      <div class="mb-3">
        <p class="text-gray-600 dark:text-gray-300 mb-1">Description:</p>
        <p class="whitespace-pre-wrap"><%= quest.description %></p>
      </div>
    <% end %>
    <div class="flex flex-col sm:flex-row sm:justify-between">
      <p class=""><span class="text-gray-600 dark:text-gray-300">Created:</span> <%= format_date(quest.created_at) %></p>
      <p class=""><span class="text-gray-600 dark:text-gray-300">Last updated:</span> <%= format_date(quest.updated_at) %></p>
    </div>
    <p class=""><span class="text-gray-600 dark:text-gray-300">Status:</span> <%= quest.status.to_s %></p>
  </div>
</div>
