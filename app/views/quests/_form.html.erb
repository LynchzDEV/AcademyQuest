<%= form_with(model: quest, class: "contents max-w-md mx-auto") do |form| %>
  <% if quest.errors.any? %>
    <div id="error_explanation" class="bg-gray-50 text-red-500 px-4 py-3 rounded-lg mt-4 border border-gray-200">
      <h2 class="text-sm font-medium"><%= pluralize(quest.errors.count, "error") %> prohibited this quest from being saved:</h2>

      <ul class="mt-2 text-xs space-y-1">
        <% quest.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-6">
    <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :name, class: ["w-full px-4 py-3 rounded-xl border transition-colors duration-200 focus:ring-0", {"border-gray-300 focus:border-gray-400": quest.errors[:name].none?, "border-red-300 focus:border-red-500": quest.errors[:name].any?}] %>
  </div>

  <div class="mt-8">
    <%= form.submit class: "w-full md:w-auto rounded-full px-6 py-3 bg-black hover:bg-gray-800 text-white text-sm font-medium transition-colors duration-200" %>
  </div>
<% end %>
