# .dockerignore for AcademyQuest Rails application
# See https://docs.docker.com/engine/reference/builder/#dockerignore-file

# Git and version control
/.git/
/.gitignore
/.gitattributes

# Environment and secrets
/.env*
/config/master.key
/config/credentials/*.key
/config/credentials.yml.enc

# Bundler and Ruby
/.bundle
/vendor/cache
/.rvm
/.rbenv
/.ruby-version

# Rails logs and temp files
/log/*
!/log/.keep
/tmp/*
!/tmp/.keep
/tmp/pids/*
!/tmp/pids/.keep
/tmp/cache/*
!/tmp/cache/.keep

# Rails storage and uploads
/storage/*
!/storage/.keep
/tmp/storage/*
!/tmp/storage/.keep

# Database files
*.sqlite3
*.sqlite3-*
/db/*.sqlite3
/db/*.sqlite3-*

# Assets and node modules
/node_modules/
/app/assets/builds/*
!/app/assets/builds/.keep
/public/assets
/public/packs
/public/packs-test

# Test coverage and reports
/coverage/
/.nyc_output
/.simplecov*

# CI/CD and deployment
/.github
/.gitlab-ci.yml
/.circleci
/.travis.yml
/config/deploy*.yml
/.kamal

# Development tools
/.devcontainer
/.vscode
/.idea
*.swp
*.swo
*~

# Documentation
/README.md
/CHANGELOG.md
/LICENSE*
/docs/

# Docker files
/.dockerignore
/Dockerfile*
/docker-compose*.yml

# Testing
/spec/tmp/
/spec/reports/
/test/tmp/
/test/coverage/
/cucumber.yml
/features/

# OS specific
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db

# Security scans and tools
/.brakeman
/.rubocop*
